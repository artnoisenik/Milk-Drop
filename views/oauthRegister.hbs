<div class="space"></div>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h1>Please complete your profile!</h1>

      <form role="form" action="/signupSubmitFacebook" method="post">
        <div class="control-group">
          <input type="text" class="form-control" name="First" placeholder='First Name' maxlength="30" pattern="^[A-z ,.'-]+$" data-error="That first name was invalid" value="{{user.first_name}}" required/>
        </div><br>
        <div class="control-group">
          <input type="text" class="form-control" name="Last" maxlength="30" pattern="^[A-z ,.'-]+$" placeholder='Last Name' value="{{user.last_name}}" required/>
        </div><br>
        <div class="control-group">
          <input type="text" class="form-control" name="Phone" pattern="^(\+\d{1,2}\s)?\(?\d{3}\)?\d{3}\d{4}$" placeholder='0123456789' required/>
        </div><br>
        <div class="control-group">
          <input type="text" class="form-control" name="Address" placeholder='Address' required/>
        </div><br>
        <div class="control-group">
          <input type="text" class="form-control" name="Address_2" placeholder='Address 2'/>
        </div><br>
        <div class="control-group">
          <input type="text" pattern="^[a-zA-Z]+(?:[\s-][a-zA-Z]+)*$" class="form-control" name="City" placeholder='City' required/>
        </div><br>
        <div class="control-group">
          <input type="text" pattern="^[a-zA-Z]+(?:[\s-][a-zA-Z]+)*$" class="form-control" name="State" placeholder='State' required/>
        </div><br>
        <div class="control-group">
          <input type="number" class="form-control" name="Zip" placeholder='Zip' required/>
          <!-- pattern='^\d{5}(?:[-\s]\d{4})?$'  -->
        </div><br>
        <div class="control-group">
          <input type="text" class="form-control" name="PortraitLink" placeholder='Link to Your Portrait' value="{{user.picture.data.url}}" required/>
        </div>
        <br>
        <div class="control-group">
          <button type="submit" class="btn btn-default custom">
              Sign up
          </button>
        </div>
        <input type="hidden" name="facebook_id" value="{{user.id}}">
      </form>
    </div>
  </div>
</div>
